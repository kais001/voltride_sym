{# templates/reservation/statistics.html.twig #}

{% extends 'baseF.html.twig' %}

{% block title %}Statistiques des réservations de voitures{% endblock %}

{% block body %}
    <h1>Statistiques des réservations de voitures</h1>
    <canvas id="reservationChart" width="400" height="200"></canvas>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let brands = [];
        let reservationCounts = [];

        {% for stat in statistics %}
            brands.push('{{ stat.marque }}');
            reservationCounts.push('{{ stat.nbReservations }}');
        {% endfor %}

        let ctx = document.getElementById('reservationChart').getContext('2d');
        let chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: brands,
                datasets: [{
                    label: 'Nombre de réservations',
                    data: reservationCounts,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
{% endblock %}
