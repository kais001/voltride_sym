{% extends 'baseF.html.twig' %}

{% block title %}New ReservationB{% endblock %}

{% block center %}
    <h1>Create new ReservationB</h1>
    <div class="main-container">
        <div class="white-frame"> <!-- Div avec cadre blanc -->
            <div class="table-container"> <!-- Div pour centrer le tableau -->
                <table class="table">

    {{ form_start(form) }}
    {{ form_row(form.dateDebut) }}
    {{ form_row(form.dateFin) }}
    {{ form_row(form.heureDebut) }}
    {{ form_row(form.heureFin) }}
    {{ form_row(form.utilisateur) }}

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="{{ path('app_reservation_borne_index') }}" class="btn btn-secondary">Cancel</a>
    {{ form_end(form) }}
</div>
</div>
</div>
{% endblock %}
