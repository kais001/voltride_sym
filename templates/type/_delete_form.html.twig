<form method="post" action="{{ path('app_type_delete', {'id': type.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <div style="margin-bot: 100px;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type.id) }}">
        <button style="cursor: pointer; background-color: #dc3545; color: #fff; border: none; padding: 8px 16px; border-radius: 4px; transition: background-color 0.3s ease;" class="btn btn-danger">Delete</button>
    </div>
</form>
